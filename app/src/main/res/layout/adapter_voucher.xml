<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#006db3"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_body"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/shimmer"
                android:layout_marginStart="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/imvw_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/card_body"
                android:layout_alignBottom="@+id/card_body"
                android:layout_alignTop="@+id/card_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txvw_title"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:text="Test-NANNY's-50K"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txvw_value"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:text="Rp 50.000"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_below="@id/card_body"
                android:background="#63ccff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    android:id="@+id/txvw_titleValid"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:text="Valid Until"
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txvw_valid"
                    android:layout_toEndOf="@+id/txvw_titleValid"
                    android:textColor="#fff59d"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:text="30 Januari 2023"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_use"
                    app:cardBackgroundColor="#fff9c4"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/text"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"
                        android:text="USE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>